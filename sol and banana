import java.util.*;
import java.lang.Math;


public class Demo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int k = sc.nextInt();
        int n = sc.nextInt();
        int w = sc.nextInt();
        int totalcost =0;
       for(int i=w;i>0;i--)
       {
           totalcost += i*k;
       }
       if(totalcost<=n)
       {
           System.out.println("0");
       }
       else
        System.out.println(Math.abs(totalcost-n));
       
    }
}
